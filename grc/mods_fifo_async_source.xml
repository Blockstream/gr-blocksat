<?xml version="1.0"?>
<block>
  <name>Asynchronous FIFO Source</name>
  <key>mods_fifo_async_source</key>
  <category>[Blockstream]/FIFO</category>
  <import>import mods</import>
  <make>mods.fifo_async_source($fifo_file, $poling_rate, $pkt_size)</make>
  <param>
    <name>Fifo File</name>
    <key>fifo_file</key>
    <type>string</type>
  </param>
  <param>
    <name>Max Throughput (bps)</name>
    <key>poling_rate</key>
    <type>int</type>
  </param>
  <param>
    <name>Packet Size</name>
    <key>pkt_size</key>
    <type>int</type>
  </param>
  <source>
    <name>async_pdu</name>
    <type>message</type>
  </source>
</block>
