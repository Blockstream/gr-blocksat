<?xml version="1.0"?>
<block>
  <name>Frame Synchronizer</name>
  <key>mods_frame_sync_fast</key>
  <category>[Blockstream]/Synchronizers</category>
  <import>import mods</import>
  <make>mods.frame_sync_fast($treshold, $preamble_len, $payload_len, $equalize, $fix_phase, $const_order, $fw_preamble, $verbosity)</make>
  <callback>get_timing_rec_indicator()</callback>
  <callback>get_state()</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Threshold</name>
    <key>treshold</key>
    <type>float</type>
  </param>
  <param>
    <name>Preamble Length</name>
    <key>preamble_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Payload Length</name>
    <key>payload_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Constellation Order</name>
    <key>const_order</key>
    <type>int</type>
  </param>
  <param>
    <name>Equalize</name>
    <key>equalize</key>
    <type>int</type>
  </param>
  <param>
    <name>Fix Phase</name>
    <key>fix_phase</key>
    <type>int</type>
  </param>
  <param>
    <name>Foward Preamble</name>
    <key>fw_preamble</key>
    <type>int</type>
  </param>
  <param>
    <name>Verbosity</name>
    <key>verbosity</key>
    <type>int</type>
    <option>
      <name>None</name>
      <key>0</key>
    </option>
    <option>
      <name>Acquisition</name>
      <key>1</key>
    </option>
    <option>
      <name>Full</name>
      <key>2</key>
    </option>
  </param>


  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>sym_in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>timing_metric</name>
    <type>float</type>
  </sink>
  <sink>
    <name>norm_c_corr</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>sym_out</name>
    <type>complex</type>
  </source>
  <source>
    <name>is_preamble</name>
    <type>byte</type>
    <optional>1</optional>
  </source>
  <source>
    <name>peak_out</name>
    <type>float</type>
    <optional>1</optional>
  </source>
</block>
