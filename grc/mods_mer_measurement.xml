<?xml version="1.0"?>
<block>
  <name>MER Estimator</name>
  <key>mods_mer_measurement</key>
  <category>[Blockstream]/Measurement Tools</category>
  <import>import mods</import>
  <make>mods.mer_measurement($N, $M)</make>
  <callback>get_snr()</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Averaging Length</name>
    <key>N</key>
    <type>int</type>
  </param>
  <param>
    <name>Constellation Order</name>
    <key>M</key>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>sym_in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>mer</name>
    <type>float</type>
  </source>
</block>
