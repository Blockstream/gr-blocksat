<?xml version="1.0"?>
<block>
  <name>DA Carrier Phase Recovery</name>
  <key>blocksat_da_carrier_phase_rec</key>
  <category>[Blockstream Satellite]/Synchronizers</category>
  <import>import blocksat</import>
  <make>blocksat.da_carrier_phase_rec($preamble_syms, $noise_bw, $damp_factor,
  $M, $data_aided, $reset_per_frame, $tracking_syms, $tracking_interval, $frame_len, $debug_stats)</make>
  <param>
    <name>Preamble Symbols</name>
    <key>preamble_syms</key>
    <type>complex_vector</type>
  </param>
  <param>
    <name>Noise Bandwidth</name>
    <key>noise_bw</key>
    <type>float</type>
  </param>
  <param>
    <name>Damping Factor</name>
    <key>damp_factor</key>
    <type>float</type>
  </param>
  <param>
    <name>Constellation Order</name>
    <key>M</key>
    <type>int</type>
  </param>
  <param>
    <name>Operation Mode</name>
    <key>data_aided</key>
    <type>enum</type>
    <option>
      <name>Data-aided Only</name>
      <key>True</key>
      <opt>type:bool</opt>
    </option>
    <option>
      <name>Data + Decision</name>
      <key>False</key>
      <opt>type:bool</opt>
    </option>
  </param>
  <param>
    <name>Reset State</name>
    <key>reset_per_frame</key>
    <value>True</value>
    <type>bool</type>
    <option>
      <name>Per Frame</name>
      <key>True</key>
    </option>
    <option>
      <name>Never</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Tracking Symbols</name>
    <key>tracking_syms</key>
    <type>complex_vector</type>
  </param>
  <param>
    <name>Tracking Interval</name>
    <key>tracking_interval</key>
    <type>int</type>
  </param>
  <param>
    <name>Frame Length</name>
    <key>frame_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Debug Stats</name>
    <key>debug_stats</key>
    <value>False</value>
    <type>bool</type>
  </param>
  <sink>
    <name>sym_in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>is_preamble</name>
    <type>byte</type>
  </sink>
  <source>
    <name>sym_out</name>
    <type>complex</type>
  </source>
  <source>
    <name>error</name>
    <type>float</type>
  </source>
</block>
