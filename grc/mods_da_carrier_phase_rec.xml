<?xml version="1.0"?>
<block>
  <name>DA Carrier Phase Recovery</name>
  <key>mods_da_carrier_phase_rec</key>
  <category>[Blockstream]/Synchronizers</category>
  <import>import mods</import>
  <make>mods.da_carrier_phase_rec($preamble_syms, $noise_bw, $damp_factor, $M, $data_aided, $reset_per_frame)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Preamble Symbols</name>
    <key>preamble_syms</key>
    <type>complex_vector</type>
  </param>
  <param>
    <name>Noise Bandwidth</name>
    <key>noise_bw</key>
    <type>float</type>
  </param>
  <param>
    <name>Damping Factor</name>
    <key>damp_factor</key>
    <type>float</type>
  </param>
  <param>
    <name>Constellation Order</name>
    <key>M</key>
    <type>int</type>
  </param>
  <param>
    <name>Operation Mode</name>
    <key>data_aided</key>
    <type>enum</type>
    <option>
      <name>Data-aided</name>
      <key>True</key>
      <opt>type:bool</opt>
    </option>
    <option>
      <name>Decision-directed</name>
      <key>False</key>
      <opt>type:bool</opt>
    </option>
  </param>
  <param>
    <name>Reset State</name>
    <key>reset_per_frame</key>
    <value>True</value>
    <type>bool</type>
    <option>
      <name>Per Frame</name>
      <key>True</key>
    </option>
    <option>
      <name>Never</name>
      <key>False</key>
    </option>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>sym_in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>is_preamble</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>sym_out</name>
    <type>complex</type>
  </source>
  <source>
    <name>error</name>
    <type>float</type>
  </source>
</block>
